			<Setter Property="FontFamily" Value="Open Sans"/>
			<Setter Property="LineHeight" Value="12"/>
			<Setter Property="Foreground" Value="#3A8DDE"/>
		</Style>
		<Style Selector="TextBlock.InitializingText">
